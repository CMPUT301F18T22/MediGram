<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="30dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/patient_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:src="@android:drawable/ic_menu_myplaces" />

        <TextView
            android:theme="@style/MyTextView"
            android:id="@+id/patient_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_alignTop="@+id/patient_icon"
            android:layout_toEndOf="@+id/patient_icon"
            android:text="User ID"
            android:textColor="#454c4e"
            android:textSize="15sp" />

        <TextView
            android:theme="@style/MyTextView"
            android:id="@+id/num_problems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/patient_icon"
            android:layout_alignStart="@+id/patient_userid"
            android:text="Number of Problems"
            android:textColor="#454c4e"
            android:textSize="15sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
