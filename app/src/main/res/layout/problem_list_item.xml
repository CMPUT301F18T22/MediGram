<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/listview_style">

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="65dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/titleText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="-10dp"
        android:background="@drawable/button_style4"
        android:focusable="false"
        android:text="Delete"
        android:textSize="10sp"

        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/list_item_text"
        android:layout_width="226dp"
        android:layout_height="41dp"

        android:layout_alignBottom="@+id/editBtn"
        android:layout_centerHorizontal="true"
        android:lines="4"
        android:maxLines="4"

        android:textColor="#454c4e"/>

    <Button
        android:id="@+id/editBtn"
        android:layout_width="65dp"
        android:layout_height="32dp"
        android:layout_below="@+id/titleText"
        android:layout_alignStart="@+id/deleteBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/button_style3"
        android:focusable="false"
        android:text="Edit"
        android:textSize="10sp"

        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="75dp"
        android:layout_height="41dp"
        android:layout_below="@+id/titleText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="18dp"
        android:text="Started:\nLocation:"

        android:textColor="#454c4e"/>

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"

        android:textColor="#454c4e"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


    </LinearLayout>


</RelativeLayout>